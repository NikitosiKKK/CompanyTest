@model API.ViewModels.RegisterModel

<head>
    <link href="/css/bootstrap.css" rel="stylesheet" type="text/css">

</head>

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Enter Email</label><br />
            <input class="input-group-text" type="text" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password">Enter password</label><br />
            <input class="input-group-text" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Confirm password</label><br />
            <input class="input-group-text" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <input class="custom-checkbox" type="submit" value="Registrate" />
        </div>
    </div>
</form>