@model EmployeeModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <div>
            <h3>Information about employee</h3>
            <table class="table table-striped table-sm">

                <tr>
                   <td><label asp-for="Name"></label></td>
                    <td><label asp-for="Surname"></label></td>
                    <td><label asp-for="Patronymic"></label></td>
                    <td><label asp-for="Title"></label></td>
                    <td><label asp-for="Date"></label></td>

                </tr>
                    <tr>
                        <td><p>@ViewBag.Employee.Name</p></td>
                        <td><p>@ViewBag.Employee.Surname</p></td>
                        <td><p>@ViewBag.Employee.Patronymic</p></td>
                        <td><p>@ViewBag.Employee.Title</p></td>
                        <td><p>@ViewBag.Employee.Date</p></td>
                    </tr>
            </table>

        </div>
        <a href="/VEmployees/Employees">Back</a>